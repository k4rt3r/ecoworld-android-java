<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondointroduccion"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtManagers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/komika1"
        android:textColor="@color/amarillo"
        android:textSize="40dp"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:textStyle="bold">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtJoanP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/komika1"
                android:text="Joan SERRANO"
                android:textColor="@color/amarillo"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/imgJoanP"
                android:layout_width="308dp"
                android:layout_height="275dp"
                android:src="@drawable/joanprofe"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtConsue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/komika1"
                android:text="CONSUELO SEGURA"
                android:textColor="@color/amarillo"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/imgConsue"
                android:layout_width="308dp"
                android:layout_height="275dp"
                android:src="@drawable/consuelo"></ImageView>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/chronoManagers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

</LinearLayout>