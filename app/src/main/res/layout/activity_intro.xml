<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondointroduccion"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtIntroduccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/komika1"
            android:textColor="@color/amarillo"
            android:textSize="50dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logotriste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/logotriste2">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logoBocadilloIntro"
                android:layout_width="590dp"
                android:layout_height="420dp"
                android:background="@drawable/cuadroexplicacionconborde"
                android:fontFamily="@font/komika1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.15"
                android:padding="35dp"
                android:text="¡Bienvenid@!\n\nMi nombre es EcoWorld y os voy a contar porqué estoy triste...\n\nDurante los últimos años he estado viajando por el mundo y mis amigos los animales me han ido contando las problemáticas que afectan a sus vidas, como la contaminación de sus hábitats a causa del efecto humano.\n\n¡Cuento contigo para que me ayudes a salvar el planeta y a nuestros amigos los animales!\n\n¿Quieres aprender cosas para mejorar nuestro planeta?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSi"
                    android:layout_width="@dimen/anchoBotonRespuesta"
                    android:layout_height="@dimen/altoBotonRespuesta"
                    android:layout_marginLeft="130dp"
                    android:background="@drawable/buttonconborde"
                    android:fontFamily="@font/komika1"
                    android:gravity="center"
                    android:onClick="start"
                    android:textColor="#000000"
                    android:textSize="@dimen/tamanoLetraBoton" />

                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="@dimen/anchoBotonRespuesta"
                    android:layout_height="@dimen/altoBotonRespuesta"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/buttonsinborde"
                    android:fontFamily="@font/komika1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/tamanoLetraBoton" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>