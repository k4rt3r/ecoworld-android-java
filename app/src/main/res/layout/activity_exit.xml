<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondointroduccion"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="right"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logotristeExit"
            android:layout_width="478dp"
            android:layout_height="353dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/logotriste2">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logoBocadilloIntroExit"
                android:layout_width="700dp"
                android:layout_height="200dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/cuadroexplicacionconborde"
                android:fontFamily="@font/komika1"
                android:gravity="center"
                android:lineSpacingMultiplier="1.25"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSiExit"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="210dp"
                    android:background="@drawable/buttonsinborde"
                    android:fontFamily="@font/komika1"
                    android:gravity="center"
                    android:onClick="start"
                    android:text="SI"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnNoExit"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/buttonconborde"
                    android:fontFamily="@font/komika1"
                    android:gravity="center"
                    android:text="NO"
                    android:textColor="#000000"

                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>